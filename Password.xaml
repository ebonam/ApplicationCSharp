<Window x:Class="ApplicatioStagez.Password"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApplicatioStagez"
             mc:Ignorable="d" 
             Title="Mot de passe" Height="300" Width="325"
             ResizeMode="NoResize">



    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

        <Label Content="Veuillez saisir votre mot de passe:" HorizontalAlignment="Center" Margin="0,30,0,0"></Label>
        <PasswordBox x:Name="_Pass"  Margin="20" Height="18.92" />
        <Label Content="Confirmez votre mot de passe:" HorizontalAlignment="Center"></Label>
        <PasswordBox Name="_verifPass" Margin="20"></PasswordBox>

        <StackPanel Orientation="Horizontal">
            <Button Name="_Cancel" Content="Annuler" HorizontalAlignment="Left" Margin="20,0,0,0"></Button>
            <Button Name="_valider" Content="Valider"  HorizontalAlignment="Center" Margin="60,0,0,0"></Button>
        </StackPanel>
    </StackPanel>
</Window>
